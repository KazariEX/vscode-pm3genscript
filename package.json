{
  "name": "vscode-pm3genscript",
  "displayName": "Pokemon 3rd Generation Script",
  "description": "Language support for pokemon-3rd-generation-script",
  "version": "0.0.4",
  "publisher": "KazariEX",
  "repository": "https://github.com/MysteryBao37/vscode-pm3genscript",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint **/src/**/*.ts"
  },
  "contributes": {
    "commands": [
      {
        "command": "pm3genscript.compile",
        "category": "PM3GenScript",
        "title": "编译"
      },
      {
        "command": "pm3genscript.write",
        "category": "PM3GenScript",
        "title": "写入"
      },
      {
        "command": "pm3genscript.decompile",
        "category": "PM3GenScript",
        "title": "反编译"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == pm3genscript",
          "command": "pm3genscript.compile",
          "group": "pm3genscript",
          "title": "编译"
        },
        {
          "when": "resourceLangId == pm3genscript",
          "command": "pm3genscript.write",
          "group": "pm3genscript",
          "title": "写入"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .gba",
          "command": "pm3genscript.decompile",
          "group": "pm3genscript",
          "title": "反编译"
        }
      ]
    },
    "languages": [
      {
        "id": "pm3genscript",
        "aliases": [
          "Pokemon 3rd Generation Script"
        ],
        "extensions": [
          ".pts"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pm3genscript",
        "scopeName": "source.pm3genscript",
        "path": "./syntax.json"
      }
    ],
    "snippets": [
      {
        "language": "pm3genscript",
        "path": "./snippets.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.8.3",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0"
  },
  "dependencies": {
    "chevrotain": "^11.0.3",
    "yaml": "^2.3.2"
  }
}
