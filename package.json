{
  "name": "vscode-pm3genscript",
  "displayName": "Pokemon 3rd Generation Script",
  "author": {
    "name": "KazariEX",
    "url": "https://bikariarchive.xyz"
  },
  "description": "VSCode for pokemon-3rd-generation-script.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "contributes": {
    "commands": [
      {
        "command": "pm3genscript.compile",
        "category": "PM3GenScript",
        "title": "编译"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == pm3genscript",
          "command": "pm3genscript.compile",
          "group": "pm3genscript",
          "title": "编译"
        }
      ]
    },
    "languages": [
      {
        "id": "pm3genscript",
        "aliases": [
          "Pokemon 3rd Generation Script"
        ],
        "extensions": [
          ".pts"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pm3genscript",
        "scopeName": "source.pm3genscript",
        "path": "./syntax.json"
      }
    ],
    "snippets": [
      {
        "language": "pm3genscript",
        "path": "./snippets.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.8.2",
    "@types/vscode": "^1.82.0"
  },
  "dependencies": {
    "chevrotain": "^11.0.3"
  }
}
